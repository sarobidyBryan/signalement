{
  "version": 8,
  "name": "Antananarivo OSM Bright",
  "metadata": {
    "maputnik:renderer": "mbgljs"
  },
  "sources": {
    "antananarivo": {
      "type": "vector",
      "tiles": [
        "/data/antananarivo/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "glyphs": "http://localhost:3000/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "landuse-residential",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "landuse",
      "filter": [
        "all",
        [
          "==",
          "class",
          "residential"
        ]
      ],
      "paint": {
        "fill-color": "#f0f0f0"
      }
    },
    {
      "id": "landcover-grass",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "landcover",
      "filter": [
        "==",
        "class",
        "grass"
      ],
      "paint": {
        "fill-color": "#d8e8c8",
        "fill-opacity": 1
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "park",
      "paint": {
        "fill-color": "#cdf5c5",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#a0c8f0",
        "line-width": 1
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "building",
      "paint": {
        "fill-color": "#d9d0c9",
        "fill-outline-color": "#d0c0b0",
        "fill-opacity": 1
      }
    },
    {
      "id": "tunnel",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": [
        "all",
        [
          "==",
          "brunnel",
          "tunnel"
        ]
      ],
      "paint": {
        "line-color": "#e8e0d8",
        "line-width": {
          "base": 1.2,
          "stops": [
            [
              5,
              0
            ],
            [
              20,
              20
            ]
          ]
        },
        "line-dasharray": [
          3,
          3
        ]
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": [
        "!in",
        "class",
        "motorway",
        "trunk",
        "primary"
      ],
      "paint": {
        "line-color": "#ffffff",
        "line-width": {
          "base": 1.2,
          "stops": [
            [
              5,
              0
            ],
            [
              13,
              0.5
            ],
            [
              20,
              8
            ]
          ]
        }
      }
    },
    {
      "id": "road_major",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": [
        "in",
        "class",
        "motorway",
        "trunk",
        "primary"
      ],
      "paint": {
        "line-color": "#f8c967",
        "line-width": {
          "base": 1.2,
          "stops": [
            [
              5,
              0
            ],
            [
              10,
              1.5
            ],
            [
              20,
              16
            ]
          ]
        }
      }
    },
    {
      "id": "place_label",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "place",
      "maxzoom": 16,
      "layout": {
        "text-field": "{name:latin}",
        "text-font": [
          "NotoSansRegular"
        ],
        "text-size": 12,
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "rgba(255,255,255,0.9)",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "road_label",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "transportation_name",
      "minzoom": 12,
      "layout": {
        "text-field": "{name:latin}",
        "text-font": [
          "NotoSansRegular"
        ],
        "text-size": 10,
        "symbol-placement": "line",
        "text-max-angle": 30
      },
      "paint": {
        "text-color": "#444444",
        "text-halo-color": "rgba(255,255,255,0.9)",
        "text-halo-width": 1
      }
    }
  ]
}